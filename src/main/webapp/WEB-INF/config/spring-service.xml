<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="PlayerService" parent="transactionProxyTemplate">
        <property name="target">
            <bean class="com.mvs.service.impl.PlayerServiceImpl">
                <property name="playerDAO" ref="PlayerDAO"></property>
                <property name="clubDAO" ref="ClubDAO"></property>

            </bean>
        </property>
    </bean>


    <bean id="ClubService" parent="transactionProxyTemplate">
        <property name="target">
            <bean class="com.mvs.service.impl.ClubServiceImpl">
                <property name="playerDAO" ref="PlayerDAO"></property>
                <property name="clubDAO" ref="ClubDAO"></property>

            </bean>
        </property>
    </bean>


</beans>
